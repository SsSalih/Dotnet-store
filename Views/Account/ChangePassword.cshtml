@model AccountChangePasword

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="#">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        Kullanıcı Bilgileri
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}

@{
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("Partials/Site/_AccountSideBar")

            <div class="col-9">

                <div class="card shadow">
                    <div class="card-header py-1 ">
                        <h5 class="card-title">Şifre Değiştir</h5>

                    </div>

                    <div class="card-body">


                        <div class="row mb-3">
                            <form method="post" asp-action="ChangePassword" class="form-horizontal">
                                <div class="row mb-3">
                                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Password" class="form-control" placeholder="Eski Şifre"
                                            required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Yeni Şifre"
                                            required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="ConfirmPassword2" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword2" class="form-control"
                                            placeholder="Yeni Şifre Tekrar" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-10 offset-sm-2">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
