<section class="mt-3">
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("Partials/Site/_AccountSideBar")

            <div class="col-9">

                <div class="card shadow">
                    <div class="card-header py-1 ">
                        <h5 class="card-title">Kullanıcı Bilgileri</h5>

                    </div>

                    <div class="card-body">

                        <div class="row mb-3">
                            <form method="post" asp-action="UserEdit" class="form-horizontal">
                                <div class="row mb-3">
                                    <label asp-for="AdSoyad" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="AdSoyad" class="form-control" placeholder="Username" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" placeholder="Email" required>
                                    </div>
                                </div>

                                <div class="row mb-3">

                                    <div class="col-sm-10 offset-sm-2">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
