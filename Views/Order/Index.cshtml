@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Order>
 <main class="container my-3">

        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1">
                        <h5 class="card-title">ürünler </h5>
                       
                    </div>
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Order Id</th>
                                    <th>Username</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                    <th>State</th>
                                    <th style="width: 40px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in @Model)
                                {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.AdSoyad</td>
                                    <td>@item.ToplamFiyat</td>
                                    <td>@item.SiparişTarihi</td>
                                    <td>
                                        <span class="badge bg-primary">Onay Bekleniyor</span>
                                    </td>
                                    <td>
                                        
                                        <a asp-controller="Order" asp-action="Details" asp-route-id ="@item.OrderId" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-right-long"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>

    </main>