@model KategoriEditModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kategori Güncelle</h5>
                <a asp-controller="Kategori" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">

                <form method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="row mb-3">
                        <div class="row mb-3">
                            <label asp-for="KategoriAdi" class="col-sm-2 col-form-label"></label>

                            <div class="col-sm-10">
                                <input asp-for="KategoriAdi" class="form-control" placeholder="Kategori Adı" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Url" placeholder="Kategori Url" class="form-control" required>

                            </div>
                        </div>
                        <div class="row mb-3">

                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                </form>
            </div>

        </div>
    </div>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (!ViewData.ModelState.IsValid)
{
    var errorMessages = string.Join(" ", ViewData.ModelState.Values
    .SelectMany(v => v.Errors)
    .Select(e => e.ErrorMessage));

    <script>
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            text: '@errorMessages'
        });
    </script>
}
