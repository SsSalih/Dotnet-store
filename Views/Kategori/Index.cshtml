@model List<KategoriGetModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">kategoriler </h5>
                        <a asp-action="Create" asp-controller="Kategori" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th >Id</th>
                                    <th>Kategori Adı</th>
                                    <th>Url</th>
                                    <th>Ürün Sayısı</th>
                                    <th style="width: 140px;"></th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider table-light align-middle table-hover ">
                                
                                @foreach(var item in Model)
                                {
                                    <tr>
                                    
                                    <td>@item.Id</td>
                                    <td>@item.KategoriAdi</td>
                                    <td>@item.Url</td>
                                    <td>@item.UrunSayisi</td>
                                    
                                    <td class="text-center "> 
                                        <a asp-action="Edit" asp-controller="Kategori" asp-route-id="@item.Id" class="btn btn-primary btn-sm ">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a asp-controller="AdminUrun" asp-route-kategori= "@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-right-long"></i>
                                        </a>
                                        @if(item.UrunSayisi ==0)
                                        {

                                        <a asp-controller="Kategori" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                        }

                                    </td>
                                </tr>
                                }
                                
                                
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
</div>