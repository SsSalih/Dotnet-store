@model IEnumerable<AppUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kullanıcılar </h5>
                <a asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>

            <div class="card-body">
                <form method="get">
                    <div class="card-body ">
                        <div class="input-group mb-2">
                            <select name="role" class="form-select" asp-items="ViewBag.roller">
                                <option value="" selected>Hepsi</option>
                            </select>
                            <button type="submit" class="btn btn-secondary">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                    </div>
                </form>

                @if (Model.Count() == 0)
                {
                    <p class="text-danger">Bu role ait kullanıcı bulunamadı.</p>
                }

                else
                {
                    <div class="table-responsive">

                        <table class="table table-bordered table-striped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Id</th>
                                    <th>Ad soayd</th>
                                    <th>Email</th>
                                    <th style="width: 90px;"></th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider table-light align-middle table-hover ">

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Id</td>
                                        <td>@item.AdSoyad</td>
                                        <td>@item.Email</td>


                                        <td class="text-center ">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm ">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>


                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                }

            </div>
        </div>
    </div>
</div>