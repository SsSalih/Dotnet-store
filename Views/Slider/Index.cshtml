@model List<SliderGetModel>;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Sliders </h5>
                <a asp-controller="Slider" asp-action="Create" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th style="width: 20px;">Id</th>
                                <th style="width: 200px;">Resim</th>
                                <th>Başlık</th>
                                <th>Aktif</th>
                                <th>Index</th>
                                <th style="width: 90px;"></th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider table-striped table-hover align-middle">
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="@Url.Content("~/img/" + @item.Resim)" class="img-fluid fixed-img" alt="">
                                    </td>
                                    <td>@item.Baslik</td>
                                    <td>
                                        @if(item.Aktif)
                                        {
                                        <i class="fa-solid fa-circle-check text-success d-flex justify-content-center align-items-center"></i>
                                        }
                                        else
                                        {
                                        <i class="fa-solid fa-circle-xmark text-danger d-flex justify-content-center align-items-center"></i>
                                        }
                                    </td>
                                    <td> @item.Index</td>
                                    <td>
                                        <a asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
