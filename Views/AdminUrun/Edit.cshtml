@model UrunEditModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" class="form-horizontal" enctype="multipart/form-data">

<div class="row">
    <div class="col-md-9">
        <div class="card shadow bg-dark text-white">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Ürün güncelle</h5>
                <a href="product.html" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control" placeholder="Ürün Adı" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"> </label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control" placeholder="Ürün Fiyatı" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input offset-sm-1" checked>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input offset-sm-1" checked>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label">Kategori Seçiniz</label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.kategori" required>
                                <option value="" selected>Seçiniz</option>
                                @* @foreach(var Kategori in ViewBag.kategoriler)
                                    {
                                        <option value="@Kategori.Id" selected>@Kategori.KategoriAdi</option>
                                    } *@
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow">
            <div class="card-body">
                <img src="/img/@Model.ResimAdi" class="img-thumbnail" alt="">
                <input asp-for="ResimDosyasi" class="form-control" >
            </div>
        </div>
    </div>
</div>
                </form>
