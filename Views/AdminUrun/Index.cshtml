@model List<UrunGetModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .fixed-img {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        object-fit: contain;

    }

    .table td,
    .table th {
        vertical-align: middle !important;
    }
</style>

    
<div class="row ">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">ürünler </h5>
                <a asp-action="Create" asp-controller="AdminUrun" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <form  method="get">
                <div class="card-body ">
                    <div class="input-group mb-2">
                        <select name="kategori" class="form-select" asp-items="ViewBag.kategori">
                            <option value="" selected>Hepsi</option>
                        </select>
                        <button type="submit" class="btn btn-secondary">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </div>
            </form>
            
            @if(Model.Count ==0)
            {
                <p class="text-danger m-3">Ürün bulunamadı</p>
            }

            else
            {
            <div class="table-responsive ">
                <table class="table table-bordered table-hover table-striped mb-0 text-center">
                    <thead class="table-secondary">
                        <tr>
                            <th style="width: 20px;">Id</th>
                            <th style="width: 80px; ">Resim</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Aktif</th>
                            <th>Anasayfa</th>
                            <th>Kategori</th>
                            <th style="width: 90px;"></th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider table-striped table-hover ">

                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img src="@Url.Content("~/img/" + item.Resim)" class="img-fluid fixed-img" alt="">
                                </td>
                                <td>@item.UrunAdi</td>
                                <td>@item.Fiyat</td>
                                <td>
                                    @if (item.Aktif)
                                    {

                                        <i
                                            class="fa-solid fa-circle-check text-success d-flex justify-content-center align-items-center"></i>

                                    }
                                    else
                                    {

                                        <i
                                            class="fa-solid fa-circle-xmark text-danger d-flex justify-content-center align-items-center"></i>

                                    }

                                </td>

                                <td>
                                    @if (item.Anasayfa)
                                    {

                                        <i
                                            class="fa-solid fa-circle-check text-success d-flex justify-content-center align-items-center"></i>

                                    }
                                    else
                                    {

                                        <i
                                            class="fa-solid fa-circle-xmark text-danger d-flex justify-content-center align-items-center"></i>

                                    }

                                </td>

                                <td>@item.KategoriAdi</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="AdminUrun" asp-route-id="@item.Id"
                                        class="btn btn-primary btn-sm">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>


                                    <a asp-action="Delete" asp-controller="AdminUrun" asp-route-id="@item.Id"
                                        class="btn btn-danger btn-sm">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
            }
        </div>
    </div>
</div>
</div>